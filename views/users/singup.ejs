<% layout("/layouts/boilerplate")%>
<div class="row mt-3">
  <h1 class="col-6 offset-3">Singup on Wanderlust</h1>
  <div class="col-6 offset-3">
    <form action="/singup" method="POST" class="needs-validation" novalidate>
      <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input
          name="username"
          type="text"
          class="form-control"
          required
          id="username"
        />
        <div class="valid-feedback">looks goods</div>
      </div>
      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input
          name="email"
          type="email"
          class="form-control"
          required
          id="email"
        />
      </div>
            <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input
          name="password"
          type="password"
          class="form-control"
          required
          id="password"
        />
      </div>
      <button class="btn btn-success">SingUp</button>
    </form>
  </div>
</div>
